    <bugTrackerUrl>https://github.com/PCFDev/ChocolateyPackages/issues</bugTrackerUrl>
    <tags>jboss admin java jdk</tags>
    <licenseUrl>http://jbossas.jboss.org/downloads</licenseUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <iconUrl>https://raw.githubusercontent.com/PCFDev/ChocolateyPackages/master/jboss/icon.png</iconUrl>
    <dependencies>
      <dependency id="jdk7" version="7.0.79" />      
    </dependencies>
    <releaseNotes>https://developer.jboss.org/wiki/AS711FinalReleaseNotes</releaseNotes>
  </metadata>
  <files>
    <file src="tools\**" target="tools" />
    <file src="assets\**" target="assets" />
  </files>
</package>
